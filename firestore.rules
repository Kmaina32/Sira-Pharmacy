
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Products can be read by anyone, but only managed by admins
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Settings can be read by anyone, but only managed by admins
    match /settings/store_config {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Orders can only be read/written by admins
    match /orders/{orderId} {
        allow read, write: if isAdmin();
    }
    
    // Users can read/write their own data. Admins can read all user data.
    match /users/{userId} {
        allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    // Newsletter subscriptions can be created by anyone, but only read by admins.
    match /newsletter/{subscriptionId} {
        allow create: if true;
        allow read: if isAdmin();
        allow delete, update: if false; // Nobody can update/delete
    }

    // Notifications can be read/updated by the assigned user, and created by admins.
    match /notifications/{notificationId} {
      allow read, update: if request.auth.uid == resource.data.userId;
      allow create: if isAdmin();
      allow delete: if false;
    }
    
    // Contact messages can be created by anyone, but only read/updated by admins.
    match /contact_messages/{messageId} {
      allow create: if true;
      allow read, update: if isAdmin();
      allow delete: if false;
    }
    
  }
}
