
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin role
    function isAdmin() {
      return request.auth.token.isAdmin == true;
    }

    // Products can be read by anyone, but only managed by admins
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Settings can be read by anyone, but only managed by admins
    match /settings/store_config {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Users can manage their own document. Admins can read the entire collection.
    match /users/{userId} {
      allow get, update: if request.auth.uid == userId;
      allow list: if isAdmin();
    }

    // Orders can be created by any authenticated user.
    // Users can only read their own orders. Admins can read all orders and update them.
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, update: if isAdmin() || (request.auth != null && request.auth.uid == resource.data.userId);
      allow list: if isAdmin();
    }
    
    // Notifications are specific to a user. Only they can read/update them.
    // Admins need to be able to create them (via the newsletter flow).
    match /notifications/{notificationId} {
        allow read, update: if request.auth.uid == resource.data.userId;
        allow create: if isAdmin();
        // No list access for users to prevent listing others' notifications
    }
    
    // Newsletter collection is for sign-ups. Anyone can sign up.
    // Only admins can read the list of subscribers.
    match /newsletter/{subscriptionId} {
        allow create: if true;
        allow read, list: if isAdmin();
    }
  }
}
